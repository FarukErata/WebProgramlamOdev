                    @Html.ValidationMessageFor(model => model.kargocuKodu, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.toplamFiyat, htmlAttributes: new { @class = "control-label col-md-2" })
